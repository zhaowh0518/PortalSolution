<%@ Master Language="C#" AutoEventWireup="true" CodeFile="AdminSite.master.cs" Inherits="SiteMaster" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>内容管理系统</title>
    <link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/Admin.css" rel="stylesheet" type="text/css" />
    <asp:ContentPlaceHolder ID="HeadContent" runat="server">
    </asp:ContentPlaceHolder>
</head>
<body>
    <form runat="server">
    <div class="page">
        <div class="header">
            <div class="title">
                <h1>
                    袁圈 内容管理系统
                </h1>
            </div>
            <div class="loginDisplay">
                欢迎您，<span class="bold"><%=Session[ConstantUtility.AdminConstant.UserNameKey]==null?string.Empty:Session[ConstantUtility.AdminConstant.UserNameKey].ToString() %></span>!
            </div>
            <div class="clear hideSkiplink">
                <asp:Menu ID="NavigationMenu" runat="server" CssClass="menu" EnableViewState="false"
                    IncludeStyleBlock="false" Orientation="Horizontal">
                    <Items>
                        <asp:MenuItem NavigateUrl="~/Admin/PortalCategory.aspx" Text="分类管理" />
                        <asp:MenuItem NavigateUrl="~/Admin/PortalContent.aspx" Text="内容管理" />
                        <asp:MenuItem NavigateUrl="~/Admin/PortalMenu.aspx" Text="菜单管理" />
                        <asp:MenuItem NavigateUrl="~/Admin/PortalMenuItem.aspx" Text="菜单内容" />
                        <asp:MenuItem NavigateUrl="~/Admin/PortalDocument.aspx" Text="菜单文档" />
                        <asp:MenuItem NavigateUrl="~/Admin/PortalResource.aspx" Text="资源管理" />
                        <asp:MenuItem NavigateUrl="~/Admin/SysConfig.aspx" Text="系统配置" />
                        <asp:MenuItem NavigateUrl="~/Portal/Index.aspx" Text="前台网站" Target="_blank" />
                    </Items>
                </asp:Menu>
            </div>
        </div>
        <div class="main">
            <asp:ContentPlaceHolder ID="MainContent" runat="server" />
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="footer">
        © 泰学传媒 | 文化提升道德 名师传播智慧 祈福国泰民安 2015 All Rights Reserved.
    </div>
    </form>
</body>
</html>
